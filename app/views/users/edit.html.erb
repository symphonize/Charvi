<% provide(:title, 'Edit user') %>
<div class="white-panel pad10">
	<h3>Edit <%=@user.name%></h3>	
	<div class="row">
	  <div class="span6 pad10">
	    <%= form_for(@user) do |f| %>
		  <%= render 'shared/error_messages', object: @user %>
	      <%= f.label :name %>
	      <%= f.text_field :name %>
	      <%= f.label :email %>
	      <%= f.text_field :email %>		  
	      <%= f.submit "Update", class: "btn btn-primary" %>
	      <%=hidden_field_tag :source, "profile" %>
        <% end %>
        <hr />
        <%= form_for(@user) do |g| %>
	      <%= g.label :password %>
	      <%= g.password_field :password %>
	      <%= g.label :password_confirmation, "Confirmation" %>
	      <%= g.password_field :password_confirmation %>
	      <%= g.submit "Update", class: "btn btn-primary" %>
	      <%=hidden_field_tag :source, "password" %>
	      <%= link_to "View all users", users_path,  class: "btn" %>
	    <% end %>
	  </div>
	</div>
</div>
