<div class="white-panel pad10">
	<p>
		<div class="btn-group">
		  <a class="btn btn-primary" href="#"><i class="icon-edit icon-white"></i> <%= @user.name %></a>
		  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
		  <ul class="dropdown-menu">
		    <li><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_user_path(id: @user.id)%></li>    
		    <li class="divider"></li>
		    <li><%= link_to "Add new user", new_user_path %>    	
			<li><%= link_to "View all users", users_path %>
		  </ul>
		</div>
	</p>
	<table class="table table-hover table-bordered table-nonfluid" >
		<tr>
			<td ><strong class="pull-right">Name:</strong></td>
			<td><%= @user.name %></td>
		</tr>		
		<tr>  		
			<td><strong class="pull-right">Email:</strong></td>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<td><strong class="pull-right">Role:</strong></td>
			<td><%= @user.role %></td>
		</tr>
	</table>
</div>