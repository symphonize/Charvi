<header class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
 	  <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <!-- Be sure to leave the brand out there if you want it shown -->
      <%= link_to "BYT", root_path, {class: "brand", style: "padding:30px;"} %>
 
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse" >
        <!-- .nav, .navbar-search, .navbar-form, etc -->        
	        <ul class="nav pull-right" style="padding-top:20px;">
	          <li><%= link_to "Home", root_path %></li>          
	          <% if signed_in? %>
		        <% if(is_admin? || is_owner?) %>
		       		<li class="dropdown">
		              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
		                Invoices <b class="caret"></b>
		              </a>
		              <ul class="dropdown-menu">                
		                <li><%= link_to "Process Payments", '#' %></li>
		                <li class="divider"></li>
		                <li><%= link_to "Invoices", '#' %></li>
		              </ul>
		            </li> 
	            <% end %>
	          	<li><%= link_to "Timesheet", timesheets_path %></li>
            	<% if(is_admin? || is_owner? || is_manager?) %>
	      		<li class="dropdown">
	              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                Manage <b class="caret"></b>
	              </a>
	              <ul class="dropdown-menu">
	              	<li><%= link_to "Resources", resources_path %></li>	                
	                <li><%= link_to "Projects", projects_path %></li>  
	                <% if(is_admin? || is_owner?) %>
	                <li class="divider"></li>
	                <li><%= link_to "Contractors", contractors_path %></li>
	                <li><%= link_to "Customers", customers_path %></li>
	                <% if(is_admin?) %>
	                <li><%= link_to "Companies", companies_path %></li>
	                <% else %>
	                <li><%= link_to "My Company", company_path(1) %></li>
	                <% end %>
	                <li class="divider"></li>
	                <li><%= link_to "Users", users_path %></li>
	                <% end %>                
	              </ul>
	        	</li>
	        	<% end %>
	            <li class="dropdown">
	              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                Account (<%= current_user.name%>) <b class="caret"></b>
	              </a>
	              <ul class="dropdown-menu">
	                <li><%= link_to "View Profile", current_user %></li>	                
	                <li class="divider"></li>
	                <li>
	                  <%= link_to "Sign out", signout_path, method: "delete" %>
	                </li>
	              </ul>
	            </li>
	          <% else %>
	          	<li class="dropdown">
	              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                Sign in <b class="caret"></b>
	              </a>
	              <ul class="dropdown-menu">                
	                <li>
	                	<div class="login-form">
		                	<%= form_for(:session, url: sessions_path) do |f| %>
						      <%= f.label :email %>
						      <%= f.text_field :email %>					
						      <%= f.label :password %>
						      <%= f.password_field :password %>					
						      <%= f.submit "Sign in", class: "btn btn-primary icon-user" %>
						    <% end %>					
						    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
					    </div>
	                </li>
	              </ul>
	        	</li>
	          <% end %>
	        </ul>	      
      </div> 
    </div>
  </div>
</header>