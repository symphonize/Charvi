<%= form_for :timesheet, :html => { :id => "add_new_time" }, url: { :action => "add_new_time" }, remote: true do |g| %>		  
	 <div class="modal-body">
	    <div class="row">
		  <div class="span5">
		  	  <%= render 'shared/error_messages', object: @timesheet %>	  	  
		      <%= g.label :project %>
		      <%= collection_select :timesheet, :resource_id, @projects, :id, :name, {}, {} %>
	      	  <%= g.label :day %>
		      <div class="input-append date" id="dp3" data-date-format="yyyy-mm-dd">			      
		      	<%= g.text_field :day, :class=>"span2", :size=> 16, :readonly =>true%><span class="add-on"><i class="icon-calendar"></i></span>
	    	  </div>
		      <%= g.label :description %>
		      <%= g.text_area :description, :size => "10x5"  %>
		      <%= g.label :time %>
		      <%=select_tag :hours, options_for_select(['00','01', '02', '03', '04', '05', '06', '07', '08', '09', '10', '11', '12', '13', '14', '15', '16', '17', '18']), class:'span1 btn' %> :
		      <%=select_tag :minutes, options_for_select(['00', '15', '30', '45']), class:'span1 btn' %>
		      <%=hidden_field_tag :new_time_contractor_id %>
		      <%=hidden_field_tag :new_time_company_id %>
		  </div>
		</div>
	 </div>
	 <div class="modal-footer">
	    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	    <%= g.button "Add", class: "btn btn-primary", html:{id: "btnSubmit"}, :onclick=> 'add_new_time();return false;' %>
	 </div>
 <% end %>