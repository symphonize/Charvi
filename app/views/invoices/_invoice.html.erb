<tr>
	<td><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_invoice_path(id: invoice.id) %></td>
	<td><%= link_to raw("<i class='icon-eye'></i>" + invoice.invoice_no), invoice_path(invoice.id) %></td>				
	<td><%= invoice.customer.name %></td>		
	<td><%= invoice.invoice_date.strftime("%m/%d/%Y") %></td>
	<td><%= invoice.due_date.strftime("%m/%d/%Y") %></td>
	<td><%= number_to_currency(invoice.invoice_amount) %></td>
	<td><%= invoice.status_code %></td>
	<td><%= link_to raw("<i class='icon-eye'></i> Delete"), invoice_path(invoice.id), :confirm => 'Are you sure you want to delete?', :method => :delete, remote: true %></td>
</tr>