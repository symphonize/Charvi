<div class="white-panel pad10">
	<p>
		<div class="btn-group">
		  <a class="btn btn-primary" href="#"><i class="icon-edit icon-white"></i> <%= @company.name %></a>
		  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
		  <ul class="dropdown-menu">
		    <li><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_company_path(id: @company.id)%></li>
		    <% if(is_admin?)%>    
		    <li class="divider"></li>
		    <li><%= link_to "View all companies", companies_path %>
	    	<% end %>
		  </ul>
		</div>
	</p>	   
	<table class="table table-hover table-bordered table-nonfluid" >
		<tr>
			<td ><strong class="pull-right">Name:</strong></td>
			<td><%= @company.name %></td>
		</tr>	
		<tr>  		
			<td><strong class="pull-right">Contact:</strong></td>
			<td><%= @company.contact %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">Address1:</strong></td>
			<td><%= @company.address1 %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">Address2:</strong></td>
			<td><%= @company.address2 %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">City:</strong></td>
			<td><%= @company.city %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">State:</strong></td>
			<td><%= @company.state %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">Zip:</strong></td>
			<td><%= @company.zip %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">Email:</strong></td>
			<td><%= @company.email %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">Phone:</strong></td>
			<td><%= @company.phone %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">Fax:</strong></td>
			<td><%= @company.fax %></td>
		</tr>	
		<tr>
			<td><strong class="pull-right">Website:</strong></td>
			<td><%= @company.website %></td>
		</tr> 		  		
	</table>
</div>
