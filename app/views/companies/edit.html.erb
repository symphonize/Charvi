<% provide(:title, 'Edit company') %>
<h1>Edit company</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@company) do |f| %>
	  <%= render 'shared/error_messages', object: @company %>
	
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :contact %>
      <%= f.text_field :contact %>

      <%= f.label :address1 %>
      <%= f.text_field :address1 %>

      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
      
      <%= f.label :city %>
      <%= f.text_field :city %>
      
      <%= f.label :state %>
      <%= f.select :state, us_states %>
      
      <%= f.label :zip %>
      <%= f.text_field :zip %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :phone %>
      <%= f.text_field :phone %>
      
      <%= f.label :fax %>
      <%= f.text_field :fax %>
      
      <%= f.label :website %>
      <%= f.text_field :website %>
      
      <%= f.submit "Update company", class: "btn btn-large btn-primary" %>
      <%= link_to "View all companies", companies_path,  class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>