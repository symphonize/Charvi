<% provide(:title, 'Add new company') %>
<div class="white-panel pad10">
	<h3>Sign Up</h3>
	<div class="row">
		<div class="span5 pad10">
		    <%= form_for(@company) do |f| %>
				<%= render 'shared/error_messages', object: @company %>
				Company
				<%= f.text_field :name %>
				<%= f.label :contact %>
				<%= f.text_field :contact %>
				<%= f.label :phone %>
				<%= f.text_field :phone %>
				<%= f.fields_for @company.users do |user_form| %>
					<%= user_form.label :email %>
					<%= user_form.text_field :email %>
					<%= user_form.label :password %>
					<%= user_form.password_field :password %>
					<%= user_form.label :password_confirmation, "Confirmation" %>      
					<%= user_form.password_field :password_confirmation %>
				<%end%>
				<br /><br />
				<%= f.submit "Create My Account", class: "btn-large btn-success" %>
			<% end %>
		</div>
	</div>
</div>
