<% provide(:title, 'Add new company') %>
<div class="white-panel pad10">
<h3>Add new company</h3>

<div class="row">
  <div class="span5">
    <%= form_for(@company) do |f| %>
	  <%= render 'shared/error_messages', object: @company %>
	
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :contact %>
      <%= f.text_field :contact %>

      <%= f.label :address1 %>
      <%= f.text_field :address1 %>

      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
      
      <%= f.label :city %>
      <%= f.text_field :city %>
      
      <%= f.label :state %>
      <%= f.select :state, us_states %>
      
      <%= f.label :zip %>
      <%= f.text_field :zip %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :phone %>
      <%= f.text_field :phone %>
      
      <%= f.label :fax %>
      <%= f.text_field :fax %>
      
      <%= f.label :website %>
      <%= f.text_field :website %>
      
      <%= f.submit "Add", class: "btn btn-primary" %>
      <%= link_to "View all companies", companies_path,  class: "btn" %>
    <% end %>
  </div>
</div>
</div>
