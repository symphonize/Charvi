<% provide(:title, 'Projects') %>
<div class="white-panel pad10">
<h3>Projects</h3>
<p>
	<%= form_for :project, remote: true, :html => { :id => "select_company" }, :url => { :action => "select_company" } do |f| %>
		<%= link_to "Add new project", new_project_path, class: "btn btn-primary" %>
  		<%= select_tag 'company', options_from_collection_for_select(user_companies, :id, :name, @company_id),
  		{onchange:  "$('#select_company').submit();", class: "btn span5"} %>	
  	<% end %>
</p>

<table class="table table-hover table-bordered table-nonfluid">
	<tr>
		<th>Name</th>		
		<th>Manager</th>
		<th>Email</th>
		<th>Phone</th>
		<th></th>
	</tr>
  	<tbody id="projects">
  		<%= render @projects %>
  	</tbody>
</table>
  
</div>
