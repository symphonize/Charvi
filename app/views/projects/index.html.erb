<% provide(:title, 'Projects') %>
<h3>Projects</h3>
<p>
	<%= form_for :project, :url => { :action => "select_company" } do |f| %>
		<%= link_to "Add new project", new_project_path, class: "btn btn-primary" %>
  		<%= select_tag 'company', options_from_collection_for_select(user_companies, :id, :name, @company_id),
  		{onchange:  "this.form.submit();", class: "btn span5"} %>	
  	<% end %>
</p>

<table class="table table-hover table-bordered" style="width:800px;">
	<tr>
		<th>Name</th>		
		<th>Manager</th>
		<th>Email</th>
		<th>Phone</th>
		<th></th>
	</tr>
  	<% @projects.each do |project| %>
  	<tr>
  		<td><%= project.name %></td>
  		<td><%= project.manager %></td>
  		<td><%= project.email %></td>
  		<td><%= project.phone %></td>
  		<td>
  			<%= link_to raw("<i class='icon-eye-open'></i> View"), project%> | 
  			<%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_project_path(id: project.id)%> 
  			
		</td>
  	</tr>
  <% end %>
</table>
  

