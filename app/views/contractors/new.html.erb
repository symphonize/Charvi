<% provide(:title, 'Add new contractor') %>
<div class="white-panel pad10">
	<h3>Add new contractor</h3>
	<div class="row">
	  <div class="span5">
	    <%= form_for(@contractor) do |f| %>
		  <%= render 'shared/error_messages', object: @contractor %>
		  <%= f.label :name %>
	      <%= f.text_field :name %>
	      <%= f.label :address1 %>
	      <%= f.text_field :address1 %>
	      <%= f.label :address2 %>
	      <%= f.text_field :address2 %>
	      <%= f.label :city %>
	      <%= f.text_field :city %>
	      <%= f.label :state %>
	      <%= f.select :state, us_states %>
	      <%= f.label :zip %>
	      <%= f.text_field :zip %>
	      <%= f.label :phone %>
	      <%= f.text_field :phone %>
	      <%= f.label :fax %>
	      <%= f.text_field :fax %>
	      <hr />
	      <%if(@users == nil) %>
  	  	  	<%= render 'contractor_new_user', :g => f %>
  	  	  <% else %>
  	  	  	<%= render 'contractor_existing_user', :h => f %>
  	  	  <% end %>
		  <br /><br />
	      <%= f.submit "Add", class: "btn btn-primary" %>
	      <%= link_to "View all contractor", contractors_path,  class: "btn" %>
	    <% end %>
	  </div>
	</div>
</div>
