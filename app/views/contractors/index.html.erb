<% provide(:title, 'Contractors') %>
<div class="white-panel pad10">
<h3>Contractors</h3>
<%=@live%>
<p>
	<%= form_for :contractor, remote: true, :html => { :id => "select_company" }, :url => { :action => "select_company" } do |f| %>
		<%= link_to "Add new contractor", new_contractor_path, class: "btn btn-primary" %>
  		<%= select_tag 'company', options_from_collection_for_select(user_companies, :id, :name, @company_id),
  		{onchange:  "$('#select_company').submit();", class: "btn span5"} %>	
  	<% end %>
</p>
<table class="table table-hover table-bordered table-nonfluid">
	<tr>
		<th>Name</th>		
		<th>Phone</th>
		<th>Email</th>
		<th></th>
	</tr>
	<tbody id="contractors">	
  		<%=render @contractors%>
  	</tbody>
</table>  
</div>
